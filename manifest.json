{
    "manifest_version": 3,
    "name": "Bookmark Pro",
    "version": "1.0.0",
    "description": "Manage bookmarks with custom categories and a premium dashboard.",
    "permissions": [
        "bookmarks",
        "storage",
        "tabs"
    ],
    "action": {
        "default_title": "Bookmark Pro",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Open Bookmark Popup"
        }
    }
}